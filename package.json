{
  "name": "iobroker.slideshow",
  "version": "0.2.1",
  "description": "Slideshow for VIS from different sources",
  "author": {
    "name": "Gaudes",
    "email": "ralf@gaudes.net"
  },
  "homepage": "https://github.com/gaudes/ioBroker.slideshow",
  "license": "MIT",
  "keywords": [
    "slideshow",
    "ioBroker",
    "Smart Home"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gaudes/ioBroker.slideshow"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.2",
    "axios": "^1.4.0",
    "axios-cookiejar-support": "^5.0.3",
    "exifr": "^7.1.1",
    "image-size": "^1.0.2",
    "tough-cookie": "^5.0.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.3.0",
    "@iobroker/testing": "^5.0.0",
    "@sentry/types": "^8.37.1",
    "@tsconfig/node18": "^18.2.4",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^8.0.1",
    "@types/image-size": "^0.8.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.9.0",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "@types/tough-cookie": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.1",
    "eslint": "^8.57.1",
    "mocha": "^10.8.2",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "widgets/**/!(tsconfig|tsconfig.*|.eslintrc).json",
    "widgets/**/*.{html,css,png,svg,jpg,js}",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:unit": "echo OK",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "release": "release-script",
    "dev-server": "dev-server",
    "translate": "translate-adapter"
  },
  "bugs": {
    "url": "https://github.com/gaudes/ioBroker.slideshow/issues"
  },
  "readmeFilename": "README.md"
}
