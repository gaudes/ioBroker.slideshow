  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.4.0",
    "axios": "^0.21.1",
    "exifr": "^6.0.0",
    "image-size": "^0.9.4"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^1.8.3",
    "@iobroker/testing": "^2.4.2",
    "@sentry/types": "^6.2.1",
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/gulp": "^4.0.8",
    "@types/image-size": "^0.8.0",
    "@types/iobroker": "^3.2.8",
    "@types/mocha": "^8.2.1",
